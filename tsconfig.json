{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~controllers/*": ["src/controllers/*"],
      "~models/*": ["src/models/*"],
      "~utils/*": ["src/utils/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src"]
}